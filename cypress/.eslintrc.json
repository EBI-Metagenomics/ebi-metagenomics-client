{
  "extends": [
    "eslint:recommended",
    "google",
    "plugin:@typescript-eslint/recommended",
    "plugin:cypress/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "max-len": [2, {"code": 100}],
    "no-console": "off",
    "no-process-env": 0,
    "require-jsdoc": "off",
    "comma-dangle": ["error", "never"],
    "camelcase": [2, {"properties": "never"}],
    "dot-location": ["error", "property"],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "amd": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "cypress/globals": true
  },
  "globals": {
    "cy": false
  },
  "plugins": [
    "cypress",
    "@typescript-eslint"
  ],
  "settings": {
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": "./tsconfig.json"
      }
    }
  }
}