<div class="row columns">
    <h4>
        <a class="expand-button min" for="#{{id}}">
            Experiment details
        </a>
    </h4>
    <div id="{{id}}" class="box">
        {{#if model.analysis.experiment_type}}
            <div class="row">
                <div class="column small-12 medium-4 large-4 detailList-key">
                    Experiment type:
                </div>
                <div class="column small-12 medium-8 large-8 detailList-value">
                    {{#replace "_" " "}}
                        {{model.analysis.experiment_type}}
                    {{/replace}}
                </div>
            </div>
        {{/if}}
        {{#if model.runs}}
            <div class="row">
                {{#each model.runs}}
                    {{#if @first }}
                        <div class="column small-12 medium-4 large-4">
                            Instruments:
                        </div>
                    {{/if}}
                    <div data-cy="instrument" class="column small-12 medium-8 large-8 {{#unless @first}}small-offset-12 medium-offset-4 large-offset-4{{/unless}}">
                        platform: {{this.instrument_platform}}, model: {{this.instrument_model}}
                    </div>
                {{/each}}
            </div>
        {{else}}
            <div class="row">
                {{#if model.analysis.instrument_model }}
                    <div class="column small-12 medium-4 large-4 detailList-key">
                        Instrument model: {{model.analysis.instrument_model}}
                    </div>
                {{/if}}
                {{#if model.analysis.instrument_platform }}
                    <div class="column small-12 medium-8 large-8 detailList-value">
                        Instrument platform: {{model.analysis.instrument_platform}}
                    </div>
                {{/if}}
            </div>
        {{/if}}
    </div>
</div>